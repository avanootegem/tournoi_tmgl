{% extends "template.html.twig" %}

{% block body %}
<div class="body-content">

    {% if flash != NULL %}
        <div class="{{flash.type}}">
            <h6>{{flash.message}}</h6>
        </div>
    {% endif %}
    <div class="info_account">   
        <span> {{auth.username}} </span><br>
        <span> {{auth.email}} </span><br>
    </div>

    <form method="POST" action="{{baseUrl}}/my_account/change_password">
        <div class="input-container">
            <input type="password" name="password" class="input-field" placeholder="password">
        </div>

        <div class="input-container">
            <input type="password" name="confirm_password" class="input-field" placeholder="confirm password">
        </div>

        <button type="submit" class="btn">Changer de mot de passe</button>
    </form>
</div>
{% endblock %}